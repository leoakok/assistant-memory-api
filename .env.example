# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# MongoDB Configuration (Optional - falls back to JSON if not provided)
MONGODB_URI=mongodb://localhost:27017/assistant-memory
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/assistant-memory?retryWrites=true&w=majority

# Storage Configuration
STORAGE_MODE=auto
# Options: 'mongodb', 'json', 'auto' (tries MongoDB, falls back to JSON)
JSON_STORAGE_PATH=./data

# API Configuration
API_VERSION=v1
MAX_CONTEXT_SIZE=100000
# Maximum characters for conversation context
MAX_CONTEXTS_PER_USER=100
MAX_TASKS_PER_USER=500

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug

# CORS Configuration
CORS_ORIGIN=*
# For production, specify your domain: https://yourdomain.com